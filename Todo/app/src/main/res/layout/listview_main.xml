<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityListView">


    <ListView
        android:id="@+id/itemListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:elevation="6dp"
        android:onClick="onFabButtonClick"
        android:src="@drawable/ic_fab_main_horiz_24dp"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="25dp"
        android:elevation="6dp"
        android:src="@drawable/ic_fab_sort_24dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp" />

    <TextView
        android:id="@+id/tv_sort_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="95dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/fab_text_background"
        android:elevation="6dp"
        android:padding="5dp"
        android:text="Sort by"
        android:textColor="#ffffff"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="25dp"
        android:elevation="6dp"
        android:src="@drawable/ic_fab_add_a_new_task_24dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp" />

    <TextView
        android:id="@+id/tv_add_a_new_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="155dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/fab_text_background"
        android:elevation="6dp"
        android:padding="5dp"
        android:text="Add a new task"
        android:textColor="#ffffff"
        app:pressedTranslationZ="12dp" />


</android.support.design.widget.CoordinatorLayout>
